<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="270px"
    android:background="@color/white"
    android:orientation="vertical">

    <!--
    android:background="@mipmap/ic_common_title_bg"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/common_title_bar_back_image"
            android:layout_width="@dimen/common_title_bar_height"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="27px"
            android:layout_marginTop="15px"
            android:layout_marginBottom="50px"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="44px"
            android:paddingVertical="33px"
            android:scaleType="fitCenter"
            android:src="@mipmap/common_back_icon" />

        <ImageView
            android:id="@+id/close_image"
            android:layout_width="@dimen/common_title_bar_height"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15px"
            android:layout_marginBottom="50px"
            android:layout_toRightOf="@+id/common_title_bar_back_image"
            android:background="?android:attr/selectableItemBackground"
            android:padding="37px"
            android:scaleType="fitCenter"
            android:src="@mipmap/close_icon"
            android:visibility="gone" />


        <TextView
            android:id="@+id/common_title_bar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="130px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/common_title_bar_title_text_max_width"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="55px"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mine_text"
            android:layout_width="wrap_content"
            android:layout_height="140px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="58px"
            android:layout_marginBottom="50px"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="40px"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/common_title_bar_height"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15px"
            android:layout_marginRight="12px"
            android:layout_marginBottom="50px"
            android:background="?android:attr/selectableItemBackground"
            android:padding="37px"
            android:scaleType="fitCenter"
            android:src="@mipmap/doubt_icon"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="140px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="38px"
            android:layout_marginBottom="50px"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/release_text"
                android:layout_width="157px"
                android:layout_height="78px"
                android:background="@drawable/common_button_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="42px"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/more_image"
            android:layout_width="89px"
            android:layout_height="49px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="55px"
            android:layout_marginRight="52px"
            android:layout_marginBottom="80px"
            android:background="?android:attr/selectableItemBackground"
            android:padding="20px"
            android:src="@mipmap/more_icon"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/common_title_bar_title_text"
        android:layout_alignParentBottom="true"
        android:background="@color/new_line_color" />
</LinearLayout>