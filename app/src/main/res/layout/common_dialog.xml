<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_white_corners_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="84px"
            android:layout_marginTop="72px"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/text_color"
            android:textSize="46px"
            android:textStyle="bold"
            tools:text="这是标题这是标题这是标题这是标题这是标题" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50px"
            android:layout_marginTop="52px"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:maxHeight="1300px"
            android:textColor="@color/des_text_color"
            android:textIsSelectable="true"
            android:textSize="40px"
            tools:text="这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="89px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="302px"
                android:layout_height="wrap_content"
                android:background="@drawable/common_cancel_button"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingVertical="33px"
                android:singleLine="true"
                android:textColor="#969696"
                android:textSize="37px"
                android:textStyle="bold"
                tools:text="辅助操作" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="302px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43px"
                android:background="@drawable/common_dialog_button"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingVertical="33px"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="37px"
                android:textStyle="bold"
                tools:text="主操作" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="48px" />
    </LinearLayout>
</LinearLayout>